{
  "version": 2,
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "nodeVersion": "18.x",
        "installCommand": "npm install --legacy-peer-deps && npx prisma generate",
        "buildCommand": "next build"
      }
    }
  ],
  "env": {
    "PRISMA_SKIP_POSTINSTALL": "1",
    "NEXT_TELEMETRY_DISABLED": "1"
  }
} 